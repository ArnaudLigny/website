<div class="itemList bg-white/10 p-6 rounded-md text-left">
    {% if project.cover is defined %}{{ asset(project.cover)|resize(300)|html({alt: project.title}, {responsive: true}) }}{% else %}{{ asset('pages/welcome.jpg')|resize(300)|html({alt: project.title}, {responsive: true}) }}{% endif %}
    <h3 class="font-bold py-4">{{ project.title }}</h3>
    <div class="flex flex-row items-center gap-2">
        <a class="text-white bg-color font-bold py-2 px-4 rounded-md transition-all hover:no-underline hover:bg-colorHover"
           href="{{ url(project) }}" title="{{ project.title }}">
            See project
        </a>
        <a class="inline-block no-underline hover:text-slate-700 dark:hover:text-slate-100 hover:text-underline text-center h-10 p-2 md:h-auto md:p-4"
           target="_blank" href="{{ project.repository }}">
            <img src="/icons/github.svg" alt="github"  style="height:24px; width: 24px; ">
        </a>
    </div>
</div>