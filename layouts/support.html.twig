{% extends '_default/page.html.twig' %}

{%- block content ~%}
    <div class="intro w-full min-h-[90vh] relative bg-cover overflow-hidden flex items-center" style="">
        <div class="cloud-1 w-[160vw] h-[150vh] bg-secondary rounded-full absolute -top-[100vh] -right-[100vw] blur-3xl opacity-50"></div>
        <div class="cloud-1 w-[140vw] h-[140vh] bg-secondary rounded-full absolute -left-[85vw] -bottom-[80vh] blur-3xl opacity-50"></div>

        <div class="container container-md mx-auto">
            <div class="flex flex-row gap-16 items-center">
                <div class="basis-3/5 flex flex-col gap-6">
                    <h1>{{ page.title }}</h1>
                    <p class="text-gris">{{ page.content }}</p>
                    <div>
                        <a href="{{ url('about') }}"
                           class="text-white bg-color font-bold py-2 px-4 rounded-md transition-all hover:no-underline hover:bg-colorHover">More
                            informations</a>
                    </div>
                </div>
                <div class="basis-2/5 lighten">
                    {{ asset('pages/support.jpg')|resize(600)|html({alt: page.title}, {responsive: true}) }}
                </div>
            </div>
        </div>
    </div>



{%- endblock ~%}
